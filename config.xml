<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		xmlns:android = "http://schemas.android.com/apk/res/android"
        id          = "com.steadmanhill.webTest"
        versionCode = "7"
        version     = "0.7" >

    <!-- versionCode is Android only: increase each build, unrelated to displayed version -->

		<name>WebFileTest</name>

        <description>
			Test file-transfer plugin.
        </description>

        <author email="dev.steadman.hill@gmail.com">
			Steve Bohrer
		</author>

				<!-- preferences -->
		<preference name="permissions" value="none"/>			<!-- core plugins add own permissions -->
		<preference name="phonegap-version" value="3.6.3" /> 	<!-- all: current version of PhoneGap -->
		<preference name="orientation" value="default" /> 		<!-- all: default means both landscape and portrait are enabled -->
		<preference name="target-device" value="universal" /> 	<!-- all: possible values handset, tablet, or universal -->
		<preference name="fullscreen" value="false" /> 			<!-- all: hides the status bar at the top of the screen -->
		<access origin="*" />

				<!-- Android -->
		<preference name="android-minSdkVersion" value="17" /> 			<!-- android: MIN SDK version supported on the target device. -->
		<preference name="android-targetSdkVersion" value="19" /> 		<!-- highest version app was tested on. 19 == KitKat -->
		<preference name="AndroidPersistentFileLocation" value="Compatibility" />  <!-- files in private space -->

		<gap:platform name="android" />
		<gap:plugin name="org.apache.cordova.file" source="plugins.cordova.io" version="1.3.2" />
		<gap:plugin name="org.apache.cordova.file-transfer" source="plugins.cordova.io" version="0.4.8" />
</widget>
